<% if current_user.mark_post?(target_post) %>
    <%= form_for(current_user.favorites.find_by(micropost_id: target_post.id), html: { method: :delete } ) do |f| %>
        <%= hidden_field_tag :micropost_id, target_post.id %>
        <%= f.submit 'Remove from favorite', class: 'btn btn-warning btn-xs col-xs-3 col-xs-offset-1' %>
    <% end %>
<% else %>
    <%= form_for(current_user.favorites.build) do |f| %>
        <%= hidden_field_tag :micropost_id, target_post.id %>
        <%= f.submit 'favorite', class: 'btn btn-primary btn-xs col-xs-3 col-xs-offset-1' %>
    <% end %>
<% end %>
